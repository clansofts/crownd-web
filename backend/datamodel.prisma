enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

enum PostType {
  IMAGE
  VIDEO
  ROUTINE
}

type User {
  id: ID! @id
  firstName: String!
  lastName: String!
  username: String @unique
  email: String @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
