enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

enum PostType {
  IMAGE
  VIDEO
  ROUTINE
}

type User {
  id: ID! @id
  firstName: String!
  lastName: String!
  username: String @unique
  email: String! @unique
  password: String!
  posts: [Post!]!
  following: [User!]! @relation(name: "Following", link: INLINE)
  followers: [User!]! @relation(name: "Followers", link: INLINE)
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Post {
  id: ID! @id
  caption: String
  image: String
  largeImage: String
  video: String
  type: PostType @relation(link: INLINE)
  author: User @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
